/* pages/workingMode/workingMode.wxss */
page{
  /* background-color: #f5f5f5; */
}
.page-head{
  text-align: center;
  padding: 20px 0;
}
.weui-msg{
  padding-top: 0;
}
.page-head .weui-flex-t1 .placeholder{
  font-size: 16px;
  color: #656565;
}
.page-head .weui-flex-t2 .placeholder{
  font-weight: bold;
  font-size: 22px;
  color: #656565;
}
.page-head .weui-flex-t2 .placeholder.placeholder-2{
  color: #f36902;
}
.weui-grid{
  width: 50%;
  padding-left: 0;
  padding-right: 0;
}
.weui-grid .weui-grid__icon {
  width: 100%;
  height: auto;
  margin: 0 auto;
  text-align: center;
  padding-top: 30rpx;
}
.weui-grid .weui-grid__icon .phone-icon{
  /* width: 100% ;
  height: 464rpx;
  display: block */
}
.weui-grid-box{
  margin: -20px 0;
  padding-top: 20px;
  padding-bottom: 20px;
}
.weui-grid .head-title{
  color: #000000;
  font-size: 46rpx;
  text-align: left;
  margin-top: 0;
  display: block;
  margin-bottom: 20rpm;
  text-indent: 30rpx;
}
.weui-grid .bott-title{
  color: #c9c9c9
}
.weui-grid .bott-title .money{
  color: #fe930f;
  font-size: 38rpx;
  margin: 0 30rpx 0 6rpx;
}
.weui-grid .bott-title .time{
  font-size: 38rpx;
  color: #000;
  margin: 0 0rpx 0 6rpx;
}
.weui-cells_after-title{
  margin-bottom: 80rpx;
}
.weui-btn-area .weui-btn{
  color: #ffffff;
  background: linear-gradient(to right, #f36902 , #ff9911);
}
.bottom-text{
  padding-top: 30rpx;
  text-align: center;
  font-size: 12px;
  color: #656565;
}
.weui-cell{
  padding: 15px;
}
.weui-cell__ft .price{
  display: inline-block;
  color: #000;
  margin-right: 10px;
}

.weui-cell .weui-cell__bd .text{
  font-size: 12px;
  color: #656565;
}
.weui-cell .weui-cell__bd text{
  background-color: #e0e0e0;
  color: #ffffff;
  font-size: 12px;
  border-radius: 5px;
  padding: 0px 2px 2px 2px;
  margin-left: 5px;
}