<!--pages/recharge/recharge.wxml-->
<view class="container">
  <view class="page-head">
      <view class="page__desc">帐户余额</view>
      <view class="page__title"><text>0.00</text>元</view>
  </view>
  <view class="page-body">
    <view class="weui-flex-box">
        <view class="weui-flex">
            <view class="weui-flex__item on"><view class="placeholder">100元</view></view>
            <view class="weui-flex__item"><view class="placeholder">50元</view></view>
        </view>
        <view class="weui-flex">
            <view class="weui-flex__item"><view class="placeholder">20元</view></view>
            <view class="weui-flex__item"><view class="placeholder">10元</view></view>
        </view>
        <view class="weui-flex">
            <view class="weui-flex__item"><view class="placeholder">200元</view></view>
            <view class="weui-flex__item" style="background-color:#fff;"><view class="placeholder"></view></view>
        </view>
    </view>
    <view class="weui-cells weui-cells_after-title">
        <radio-group bindchange="radioChange">
            <label class="weui-cell weui-check__label" wx:for="{{radioItems}}" wx:key="value">
                <radio class="weui-check" value="{{item.value}}" checked="{{item.checked}}"/>
                <view class="weui-cell__hd">
                    <image src='../../images/icon-wx.png' style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
                </view>
                <view class="weui-cell__bd">{{item.name}}</view>
                <view class="weui-cell__ft weui-cell__ft_in-radio" wx:if="{{item.checked}}">
                    <icon class="weui-icon-radio" type="success_no_circles" size="16"></icon>
                </view>
            </label>
        </radio-group>
        
    </view>
    <view class="weui-btn-area">
        <button class="weui-btn" type="primary" bindtap="showTopTips">去充值</button>
    </view>
    <view class='bottom-text'>
      点击去充值即代表您已阅读并同意<navigator url="../rechargeAgreement/rechargeAgreement">《充值协议》</navigator>
    </view>
  </view>
  
</view>
