/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.page-section-gap{
  position: relative;
  width: 100%;
  height: 100vh;
}
#myMap{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}
.controls-box{
  width: 100%;
  bottom: 5%;
  position: absolute;
}
.controls{
  margin: 0 66rpx;
  /* background: linear-gradient(to right, #f36902 , #ff9911); */
  background-color: #ff9911;
  padding: 4% 0;
  text-align: center;
  border-radius: 16rpx;
}
.controls .scavenging{
  width: 46rpx;
  height: 46rpx;
  /* margin: 0 auto; */
  display: inline-block;
}
.controls .time{
  display: inline-block;
  height: 46rpx;
  line-height: 46rpx;
  color: #ffffff;
  margin-left: 16rpx;
  vertical-align: top;
}
.controls .scavenging .code-img{
  width: 46rpx;
  height: 46rpx;
  vertical-align: bottom
}