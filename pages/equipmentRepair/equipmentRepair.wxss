/* pages/equipmentRepair/equipmentRepair.wxss */

.container{
  padding: 10rpx 40rpx;
}
.page-head{
  text-align: center;
  margin-bottom: 25px;
}
.weui-grid{
  width: 25%;
  border: none;
}
.weui-grids{
  border: none;
}
.weui-btn-area{
  margin-left: 0;
  margin-right: 0;
}
.weui-btn-area .weui-btn{
  background: linear-gradient(to right, #f36902 , #ff9911);
}
.weui-cells{
  border-left: 1px solid #d9d9d9;
  border-right:1px solid #d9d9d9;
}
.weui-grid__icon{
  width: 50px;
  height: 50px;
}
.weui-btn-area{
  position: relative;
  background-color: #f4f5f7;
  border-radius: 5px;
}
.weui-cell__bd-text{
  margin-right: 40px;
}
.weui-cell__bd-icon{
  position: absolute;
  top: 10px;
  right: 15px;
  width: 20px;
  height: 20px;
}
.weui-cell__bd-icon image{
  width: 20px;
  height: 20px;
}